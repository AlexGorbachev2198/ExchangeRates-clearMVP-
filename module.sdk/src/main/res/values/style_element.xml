<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_empty_text">
        <item name="android:textSize">@dimen/text_size_heavy</item>
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="list_item_text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="list_item_text_sub">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">#6c6c6c</item>
    </style>

    <style name="list_item_title">
        <item name="android:textSize">@dimen/text_size_heavy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_main_highlighted</item>
    </style>

    <style name="list_category_title">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- переехать на main_text_title -->
    <style name="param_title" parent="main_text_title"/>

    <style name="main_text_title_header" parent="main_text_title">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="param_value">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="main_text_title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="main_text_highlighted">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_main_highlighted</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="main_text_sub">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_main_sub</item>
    </style>

    <style name="operation_value_negative" parent="main_text_highlighted">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="operation_value_positive" parent="main_text_highlighted">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="dialog_text" parent="main_color_text_large" />

    <style name="dialog_close_text" parent="main_color_text_bold_large" />

    <style name="list_balance_value_int" parent="single_line_text_bold_large" />

    <style name="list_number" parent="grey_text_me" />

    <style name="main_button">
        <item name="android:textColor">@color/text_color_continue_button</item>
        <item name="android:background">@drawable/bg_button_continue_main</item>
    </style>

    <style name="dialog_title_text" parent="main_color_text_large" />

    <style name="dialog_edit_text" parent="edit_large" />

    <style name="list_balance_value_fract" parent="list_balance_value_int">
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="list_balance_currency_name" parent="single_line_text_bold" />

    <style name="full_detail_item_value" parent="main_color_text_large" />

    <style name="full_detail_currency_value" parent="main_color_text_large" />

</resources>