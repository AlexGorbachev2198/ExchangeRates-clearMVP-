<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>


    <!--for action Bar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--for tool Bar-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- account settings dialog -->

    <style name="main_color_text_bold_large" parent="single_line_text_bold_large">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="single_line_text_bold_large" parent="single_line_text_bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="single_line_text_bold" parent="single_line_text_regular">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="main_color_text_large" parent="single_line_text_regular_large">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="single_line_text_regular_large" parent="single_line_text_regular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="single_line_text_regular" parent="font_regular">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="font_regular">
        <!--<item name="font">fonts/Roboto-Regular.ttf</item>-->
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="general_lable">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="item_name" parent="single_line_text_regular_large" />

    <style name="edit_large" parent="single_line_text_regular_large">
        <item name="android:background">@drawable/bg_clickable_transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/grey_text</item>
    </style>

    <style name="single_line_text_regular_me" parent="single_line_text_regular">
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="grey_text_me" parent="single_line_text_regular_me">
        <item name="android:textColor">@color/grey_text</item>
    </style>

</resources>
