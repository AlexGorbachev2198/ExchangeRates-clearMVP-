<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.red_ragnar.testing">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApp_heir"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.Testing.FirstChoiceActivity"
            android:label="@string/title_activity_first_choice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SecondChoiceActivity"
            android:label="@string/title_activity_second_choice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="app.Testing.NewFirstChoice" />
        <activity android:name="app.Testing.NewSecondChoice"></activity>
    </application>

</manifest>